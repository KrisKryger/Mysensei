@using MySensei.Models
@model IEnumerable<Course>
@{
    ViewBag.Title = "Course list";
}

<h1>Courses</h1>
<div>
    <table>
        <tr><th>ID</th><th>UserId</th><th>Description</th><th>Experience</th><th>StatusId</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Courses</td></tr>
        }
        else
        {
            foreach (Course course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.AppUserId</td>
                    <td>@course.Description</td>
                    <td>@course.Experience</td>
                    <td>@course.StatusId</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Courses", new { id = course.CourseId }))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = course.CourseId }, new { @class = "btn" })
                            <button class="btn"
                                    type="submit">
                                Delete
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn" })
