@model MySensei.Models.AppUser
@{ ViewBag.Title = "Edit"; }

@Html.ValidationSummary(false)
<h1>Edit User</h1>
<div>
    <label>Id</label> 
    <p>@Model.Id</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(x => x.Id)

    <div>
        <label>Phone</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "" })
    </div>
    <div>
        <label>Vej og nr.</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "" })
    </div>
    <div>
        <label>Postnummer</label>
        @Html.TextBoxFor(x => x.Zipcode, new { @class = "" })
    </div>
    <div>
        <label>By</label>
        @Html.TextBoxFor(x => x.City, new { @class = "" })
    </div>
    <div>
        <label>Navn</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "" })
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>
    <button type="submit" class="btn">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
}